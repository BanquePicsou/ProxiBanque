<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="PU" transaction-type="JTA">


		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>fr.adaming.entities.Personne</class>
		<class>fr.adaming.entities.Admin</class>
		<class>fr.adaming.entities.Agence</class>
		<class>fr.adaming.entities.Client</class>
		<class>fr.adaming.entities.Compte</class>
		<class>fr.adaming.entities.CompteCourant</class>
		<class>fr.adaming.entities.CompteEpargne</class>
		<class>fr.adaming.entities.Conseiller</class>
		<class>fr.adaming.entities.Gerant</class>


		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
		</properties>
	</persistence-unit>
</persistence>
